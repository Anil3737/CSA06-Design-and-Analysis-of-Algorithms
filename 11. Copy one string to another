#include <stdio.h>
#include <string.h>

int main() {
    char source[100]; // Define the source string
    char destination[100]; // Define the destination string

    printf("Enter a string: ");
    gets(source); // Input a string, you can also use fgets to handle longer strings

    // Copy the source string to the destination string
    strcpy(destination, source);

    printf("Source string: %s\n", source);
    printf("Copied string: %s\n", destination);

    return 0;
}
